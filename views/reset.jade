extends layout

block content
    h2.page-header Please enter your new password
    script(type='text/javascript').  
        var user = !{JSON.stringify(user)}
        console.log(user)
    if errors
        each error, i in errors
            div.alert.alert-danger #{error.msg}
    form(action="/users/reset" method="post")
        .form-group
            label Enter new password
            input.form-control(type="password", name="pass1", placeholder="Enter password", required)
        .form-group
            label Confirm new password
            input.form-control(type="password", name="pass2", placeholder="Confirm password", required)
        input.btn.btn-info(type="submit", name='submit', value='Change')